@model IEnumerable<ISA.Models.Entities.Flight>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Departure)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Arrival)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarryOnBag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckedBag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaggageDetails)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Services)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Departure)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Arrival)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarryOnBag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckedBag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BaggageDetails)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Services)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FlightName">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FlightName">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FlightName">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
